<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="aliment_list_view" model="ir.ui.view">
        <field name="name">aliment.list</field>
        <field name="model">aliment.aliment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="aliment_form_view" model="ir.ui.view">
        <field name="name">aliment.form</field>
        <field name="model">aliment.aliment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_aliment" model="ir.actions.act_window">
        <field name="name">Aliments</field>
        <field name="res_model">aliment.aliment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_aliment" name="Aliments" action="action_aliment"/>
</odoo>
