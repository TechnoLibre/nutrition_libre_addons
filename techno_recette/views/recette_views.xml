<odoo>
    <record id="view_recette_form" model="ir.ui.view">
        <field name="name">recette.form</field>
        <field name="model">recette.alimentaire</field>
        <field name="arch" type="xml">
            <form string="Recette Alimentaire">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group string="Ingrédients">
                        <field name="ingredients_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="quantite"/>
                                <field name="unite_mesure"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Étapes de préparation">
                        <field name="etapes_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="type_etape"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
